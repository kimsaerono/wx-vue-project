          // background: '#f0f'
          // foreground: '#ff0'
        })
        console.log(qrcode)
      },
      pushPrice() {
//        重组数组
        this.$axios.post("/jcbs/public/member/get").then(function (res) {
          this.tip = res.data.state
        }.bind(this))
      }

      ,
      position(event){
//        传地理位置
        wx.openLocation({
