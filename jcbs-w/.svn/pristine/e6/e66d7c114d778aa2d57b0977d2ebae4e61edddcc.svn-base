  export default {
    name: 'page-navbar',
    data() {
      return {
        selected: '1',
        direction: 1,
        ifDisabled:"disabled",
        elseDisabled:false,
        defaultEndPoit: "首都机场",
        defaultStartPoit: "",
        showStartPoit: true,
        showEndtPoit: true,
        sheetAction: true,
        selectedToAir: true,
        selectedToCity: false,
        tiananmen: "",
        lineTip:"该线路途经T2、T1航站楼最终抵达T3航站楼",
        disabledI:'disabledI',
        num:10,
        Price:'8.00',
        ifBuy:"disabled",
        goback:"toAirPurchase",
        showArror:true
      }
    },
    components: {
    },
    beforeRouteEnter(to, from, next) {
      next(vm => {
        // 通过 `vm` 访问组件实例,将值传入oldUrl
        vm.oldUrl = from.name
      })
    },
//  beforeRouteEnter (to, from, next) {
//    var self = this;
////    console.log(to)
////    console.log(from)
////    console.log(next)
////    next();
//    if(from.name && from.name == 'interprovincialBusDetails'){
//      selected = '2';
//    }else{
//      selected = '1';
//    }
//  },
    mounted() {
      var self = this;
      var direction = this.$route.query.direction,
          stationName = this.$route.query.stationName;
      if(direction == 1){
        this.defaultStartPoit = stationName;
        self.showArror = true;
        self.ifBuy = false;
      }else if(direction == 2){
        self.direction = 2;
        self.showArror = false;
        self.elseDisabled = "disabled";
        self.ifDisabled = false;
        self.defaultStartPoit = "首都机场";
        this.defaultEndPoit = stationName
        self.selectedToAir = false;
        self.selectedToCity = true;
        self.lineTip = "该线路途经T1航站楼最终抵达T3航站楼";
        self.ifBuy = false;
      }

      var startStationOl, startLineId, startName, stationId, startLine, startLineName;
      this.$nextTick(() => {//用于延迟执行一段代码
        // 验证是否获取到了上页的url
        /* eslint-disable no-console */
        if (this.oldUrl && this.oldUrl == 'interprovincialBusDetails') {
          this.selected = '2';
        } else {
          this.selected = '1';
        }
      })
      $('#toAir').click(function () {
        self.showArror = true;
        self.direction = 1;
        self.elseDisabled = false;
        self.ifDisabled = "disabled";
        self.defaultStartPoit = "";
        self.defaultEndPoit = "首都机场";
        self.selectedToAir = true;
        self.selectedToCity = false;
        self.lineTip = "该线路途经T2、T1航站楼最终抵达T3航站楼";
        self.ifBuy = "disabled";
      });
      $('#toCity').click(function () {
        self.showArror = false;
        self.direction = 2;
        self.elseDisabled = "disabled";
        self.ifDisabled = false;
        self.defaultStartPoit = "首都机场";
        self.defaultEndPoit = "";
        self.selectedToAir = false;
        self.selectedToCity = true;
        self.lineTip = "该线路途经T1航站楼最终抵达T3航站楼";
        self.ifBuy = "disabled";
      });

    },
    created() {
//    setTimeout(function(){
//
//    },10)
    },
    updated(){

    },
    methods: {
      searchStartPoit() {
        this.$router.push({path: '/searchList', query: {direction: this.direction,goback:this.goback}});
      }
      ,minusTicketNo(){
        if(this.num <= 1){
          return false
        }else {
          this.num --
        }
      }
      ,plusTicketNo(){
        if(this.num >= 10){
          return false
        }else {
          this.num ++
        }
      }
    }
  }
</script>

